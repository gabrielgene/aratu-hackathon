{
  "version": 2,
  "name": "aratu-hackathon",
  "builds": [
    { "src": "api/**/*.js", "use": "@now/node" },
    {
      "src": "web/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    { "src": "/(.*)", "dest": "/web/$1" }
  ],
  "env": {
    "MONGODB_URI": "@aratumongouri"
  }
}